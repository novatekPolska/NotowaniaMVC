<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title — Notowania</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr") 
    @Styles.Render("~/Content/jqueryui") 
    <link href="@Url.Content("~/Content/quotationStyles.css")" rel="stylesheet" /> 
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top"  style="background-color: #ffffff; border-bottom-color:#ffffff">
        <div class="myContainer">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span> 
                </button>
                @Html.ActionLink("Notowania", "Index", "Home", new { area = "" }, new { @class = "logo" })
                
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav" style="margin-top:15px; margin-left:20px;">
                    <li class="navbar-collapse collapse">@Html.ActionLink("Ceny", "FuelPrices", "FuelPrices", null, new { @style = "color: #0e0e0e;" })</li>
                    <li class="navbar-collapse collapse">@Html.ActionLink("Notowania cen", "Quotations", "Quotations",null, new { @style = "color: #0e0e0e;" })</li>
                </ul>
                 @(Html.TextBox("Szukaj", null, new { @class = "tbxSearch", @style = "right:30px; margin-right:30px;" })) 
                <button class="btnSearch" formaction="@Url.Action("Search")">
                <img src="@Url.Content("~/Content/Search.png")" height="25" width="25" />
                </button>
            </div> 

        </div>
    </div>
    <div class="container body-content" style="bottom:70px;">
        @RenderBody()
        
        
    </div>

    <div class="myFooter">
        <footer> 
            <p>
                <hr />
                &copy; @DateTime.Now.Year — Novatek Polska
            
            </p>
        </footer>
    </div>

    <script type="text/javascript">
        $(function () {
            $("#jqueryui-marker-datepicker").datepicker({
                dateFormat: "yy-mm-dd",
                changeYear: true,
                showOn: "button"
            }).css("display", "inline-block")
                .next("button").button({
                    icons: { primary: "ui-icon-calendar" },
                    label: "Wybierz datę",
                    text: false
                });
        });
    </script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryui")
    @RenderSection("scripts", required: false)
</body>
</html>
